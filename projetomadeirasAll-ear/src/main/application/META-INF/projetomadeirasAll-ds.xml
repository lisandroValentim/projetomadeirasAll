<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <datasource jndi-name="java:jboss/datasources/projetomadeirasAllDS" pool-name="projetomadeirasAll"
        enabled="true" use-java-context="true">
        <connection-url>jdbc:postgresql://localhost:5432/madeirasdb</connection-url>
        <driver>org.postgresql</driver>
        <pool>
            <min-pool-size>4</min-pool-size>
            <max-pool-size>4</max-pool-size>
        </pool>
        <security>
            <user-name>postgres</user-name>
            <password>postgres</password>
        </security>
    </datasource>
</datasources>
 
